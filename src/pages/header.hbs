      <header>
        <a href="/" id="emoji"><h1>{{seo.emoji}}</h1></a>
        <description>
          <a href="/"><h1>{{seo.title}}</h1></a>
         <i>{{seo.description}}</i>
        </description>

      <form class="search" action="/" method="post">
        <input
          id="query"
          name="query"
          required="required"
          type="text"
          value="{{query}}"
          placeholder="search..."
          autofocus
        />
      </form>
